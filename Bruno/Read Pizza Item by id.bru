meta {
  name: Read Pizza by id
  type: http
  seq: 4
}

get {
  url: http://localhost:3000/pizzas/1
  body: none
  auth: none
}

assert {
  res.body: isJson
  res.status: eq 200
}

tests {
  
  test("HTTP Body Response code should be equal to HTTP Response status code", ()=> 
    expect(res.getBody().pizza.id).to.equal(Number(req.url.split("/").at(-1)))
  );
  
}
